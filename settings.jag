<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>Settings</title>

		<link href="css/bootstrap.min.css" rel="stylesheet">

	</head>
	<body>

		<%
			var settingsManager = require("model/settingsManager.js");
		%>

		<div class="form-group">
		  <label for="gatewayUrl">API gateway url</label>
		  <input type="text" class="form-control" id="gatewayUrl" value="<%=settingsManager.getSetting('gatewayUrl')%>">
		</div>

		<div class="form-group">
		  <label for="consumerKey">Consumer key</label>
		  <input type="text" class="form-control" id="consumerKey" value="<%=settingsManager.getSetting('consumerKey')%>">
		</div>

		<div class="form-group">
		  <label for="consumerSecret">Consumer secret</label>
		  <input type="text" class="form-control" id="consumerSecret" value="<%=settingsManager.getSetting('consumerSecret')%>">
		</div>

		<button type="button" id="saveButton" class="btn btn-primary">
  		Save settings
		</button>


		<script src="js/jquery-2.1.4.min.js"></script>
		<script src="js/bootstrap.min.js"></script>
		<script src="js/settings.js"></script>

	</body>
</html>
